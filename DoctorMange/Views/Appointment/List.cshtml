@{
	Layout = "_Layout";
}


@model IEnumerable<DoctorMange.Models.Appointment>

<div class="container">
	<h2 class="mb-4">All Booked Appointments</h2>

	<table class="table table-striped table-bordered">
		<thead class="table-dark">
			<tr>
				<th>Patient Name</th>
				<th>Phone</th>
				<th>Email</th>
				<th>Age</th>
				<th>Booking Date</th>
				<th>Booking Time</th>
				<th>Doctor</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>@item.Name</td>
					<td>@item.Phone</td>
					<td>@item.Email</td>
					<td>@item.Age</td>
					<td>@item.BookingDate.ToString("yyyy-MM-dd")</td>
					<td>@item.BookingTime.ToString(@"hh\:mm")</td>
					<td>@item.Doctor?.Name</td>

				</tr>
			}
		</tbody>
	</table>
</div>